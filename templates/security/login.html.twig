{% extends 'base.html.twig' %}
{% block header %}
    {% include 'header/header.general.html.twig' %}

{% endblock %}

{% block title %}Log in!{% endblock %}

{% block content %}
    {% if app.user %}
        <div class="unlog">
            <span>Vous êtes connécté en tant que {{ app.user.pseudonyme }}</span> <a href="{{ path('app_logout') }}">Deconnexion</a>
        </div>
    {% endif %}

<form method="post">
    <a href="{{ path('app_register') }}"><h1>Créer un Compte</h1></a>
    <h1>Pour Vous Connecter</h1>
    <h2><label for="inputEmail">Email</label></h2>
    <div class="input">
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"  required autofocus>
    </div>
    <h2><label for="inputPassword">Mot de passe</label></h2>
    <div class="input">
    <input type="password" name="password" id="inputPassword"  required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">


{#        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
{#        See https://symfony.com/doc/current/security/remember_me.html#}

{#        <div class="checkbox mb-3">#}
{#            <label>#}
{#                <input type="checkbox" name="_remember_me"> Remember me#}
{#            </label>#}
{#        </div>#}


    <button class="effectButton" type="submit">
        Connexion
    </button>
    {% if error %}
        <div class="alert alert-danger">Erreur d'identification</div>
    {% endif %}


</form>


{% endblock %}
