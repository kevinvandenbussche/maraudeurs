{% extends 'base.html.twig' %}
{% block header %}
    {% include 'header/header.general.html.twig' %}
{% endblock %}
{% block content %}
    <h1>Les cat√©gories</h1>
    <a class="titleCrud" href="{{ path('insert_category') }}">CREER UNE NOUVELLE CATEGORIE</a>
        <article class="containerElement">
        {% for category in categories %}
            <section class="menuCrud">
                <a class="titleEffect" href="{{ path('display_articles', {'id': category.id }) }}"><h2>{{ category.name }}</h2></a>
                <div class="linkCrud">
                    <a href="{{ path('update_category', {'id' : category.id}) }}"><i class="bi bi-pencil-square"></i></a>
                {% if is_granted ('ROLE_ADMIN') %}
                        <p class="logoLink"><i class="bi bi-x-square delete"></i></p>
                </div>
                <a class="confirmDelete" href="{{ path('delete_category', {'id' : category.id}) }}"><span class="messageDelete">Confirmer la supression</span></a>
                {% endif %}
            </section>
        {% endfor %}
        </article>
{% endblock %}
