{% extends 'lore.html.twig' %}
{% block content %}

    {{ form_start(articles)  }}
        {{ form_label(articles.title, 'Titre de l\'Article', {'label_attr': {'class': 'titleLabel'}}) }}
        <div class="input">
            {{ form_widget(articles.title, {'attr': {'class': 'inputLabel'}}) }}
            {{ form_errors(articles.title) }}
        </div>
        {{ form_label(articles.articleContent, 'Decription', {'label_attr': {'class': 'titleLabel'}}) }}
        <div class="input">
            {{ form_widget(articles.articleContent) }}
        </div>
        {{ form_label(articles.category, 'Categorie', {'label_attr': {'class': 'titleLabel marginZero '}}) }}
        <div class="input">
            {{ form_widget(articles.category) }}
        </div>
        {{ form_label(articles.media, 'Media', {'label_attr': {'class': 'titleLabel'}}) }}
        <div class="flex">
            <div id="media" class="input">
                {{ form_widget(articles.media) }}
                <button onclick="test()" class="otherFiles">autre fichier</button>
            </div>
        </div>

        <button type="submit" class="effectButtonSend">Envoyer</button>
    {{ form_end(articles) }}



{% endblock %}


